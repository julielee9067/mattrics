  ITM_Port32(31) = 2; // change value of same port from 1 to 2
//  ESP_Init("Cloudwifi-167-504-P", "CWAE1923", "10.20.101.219");
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  HAL_UART_Receive_IT(&huart2, &byte, 1);

  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
